@using frontendForMasterdev.Models﻿
@model AppUserViewModel

@{
    ViewData["Title"] = "Upload Update";
}

<div class="d-flex">
    
    <div class="d-flex flex-column p-3 bg-light" style="width: 250px; min-height: 100vh;">
        <h3 class="text-center mb-3">Actions</h3>
        <div class="d-grid gap-2">
            <a asp-action="Index" class="btn btn-dark">
                <i class="fa fa-home me-2"></i> Home
            </a>
            <a asp-action="ShowSendLogs" class="btn btn-primary">
                <i class="fa fa-paper-plane me-2"></i> Send Logs
            </a>
            <a asp-action="ShowGetLogs" class="btn btn-secondary">
                <i class="fa fa-download me-2"></i> Get Logs
            </a>
            <a asp-action="ShowGetApps" class="btn btn-success">
                <i class="fa fa-cogs me-2"></i> Get Apps
            </a>
            <a asp-action="ShowGetUpdate" class="btn btn-info">
                <i class="fa fa-refresh me-2"></i> Get Update
            </a>
            <a asp-action="ShowUploadUpdate" class="btn btn-outline-dark" style="transform:scale(110%)">
                <i class="fa fa-upload me-2"></i> Upload Update
            </a>
            <a asp-action="ShowGetNewerVersion" class="btn btn-warning">
                <i class="fa fa-arrow-up me-2"></i> Get Newer Version
            </a>
            <a asp-action="ShowAddNewApplication" class="btn btn-danger">
                <i class="fa fa-plus-circle me-2"></i> Add New Application
            </a>
            
        </div>
    </div>

    
    <div class="flex-grow-1 p-4">
        <h1 class="mb-4 align-self-start">Upload Update</h1>
        <div class="card mb-3">
            <div class="card-body">
                <form asp-action="UploadUpdate" method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <input type="text" name="version" class="form-control" placeholder="Enter Version" required>
                    </div>
                    <select class="form-control mb-2" name="who" required>
                        <option value="">Select who uploads update</option>
                        @foreach (var user in Model.Users)
                        {
                            <option value="@user.id">@user.id - @user.name</option>
                        }
                    </select>
                    <select class="form-control mb-2" name="who" required>
                        <option value="">Select app id</option>
                        @foreach (var app in Model.Apps)
                        {
                            <option value="@app.id">@app.id - @app.app_Name</option>
                        }
                    </select>
                    <div class="mb-3">
                        <input type="file" name="updateFile" accept=".zip" class="form-control" required>
                    </div>
                    <button class="btn btn-warning">Upload</button>
                </form>
            </div>
        </div>
    </div>
</div>

