﻿@using frontendForMasterdev.Models
﻿
@model List<GetAppModel>
@{
    ViewData["Title"] = "Get Apps";
}

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="GetApps">
            <button class="btn btn-success mb-3">Fetch Applications</button>
        </form>
        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var app in Model)
                        {
                            <tr>
                                <td>@app.traceId</td>
                                <td>@app.title</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>
<div class="d-flex justify-content-center mb-3">
    <div class="col-md-3">
        <a asp-action="Index" class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-center">
            <i class="fa fa-mail-reply"></i>&nbsp; Back
        </a>
    </div>
</div>
