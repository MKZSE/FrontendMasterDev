@{
    ViewData["Title"] = "Send Logs";
}

<div class="d-flex flex-column align-items-center mb-3 g-3">
    <div class="col-md-6 mb-3">
        <div class="card p-3 h-100">
            <form asp-action="SendLogs">
                <div class="mb-3">
                    <input type="number" class="form-control" name="appId" placeholder="AppId">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="message" placeholder="Message">
                </div>
                <button class="btn btn-secondary w-100">Send Logs</button>
            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mb-3">
    <div class="col-md-3">
        <a asp-action="Index" class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-center">
            <i class="fa fa-mail-reply"></i>&nbsp; Back
        </a>
    </div>
</div>




