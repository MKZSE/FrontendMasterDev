@using frontendForMasterdev.Models
@model AppLogsViewModel

@{
    ViewData["Title"] = "Get Logs";
}

<div class="d-flex">
    <div class="d-flex flex-column p-3 bg-light" style="width: 250px; min-height: 100vh;">
        <h3 class="text-center mb-3">Actions</h3>
        <div class="d-grid gap-2">
            <a asp-action="Index" class="btn btn-dark">
                <i class="fa fa-home me-2"></i> Home
            </a>
            <a asp-action="ShowSendLogs" class="btn btn-primary">
                <i class="fa fa-paper-plane me-2"></i> Send Logs
            </a>
            <a asp-action="ShowGetLogs" class="btn btn-outline-secondary" style="transform:scale(110%)">
                <i class="fa fa-download me-2"></i> Get Logs
            </a>
            <a asp-action="ShowGetApps" class="btn btn-success">
                <i class="fa fa-cogs me-2"></i> Get Apps
            </a>
            <a asp-action="ShowGetUpdate" class="btn btn-info">
                <i class="fa fa-refresh me-2"></i> Get Update
            </a>
            <a asp-action="ShowUploadUpdate" class="btn btn-dark">
                <i class="fa fa-upload me-2"></i> Upload Update
            </a>
            <a asp-action="ShowGetNewerVersion" class="btn btn-warning">
                <i class="fa fa-arrow-up me-2"></i> Get Newer Version
            </a>
            <a asp-action="ShowAddNewApplication" class="btn btn-danger">
                <i class="fa fa-plus-circle me-2"></i> Add New Application
            </a>
        </div>
    </div>

    <div class="flex-grow-1 p-4">
        <h1 class="mb-4 align-self-start">Get Logs</h1>
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Log Table</h4>
                    <form class="d-flex w-50" asp-action="GetLogs" method="get">
                        <div class="mb-0 me-2">
                            <input type="text" class="form-control" name="appId" placeholder="AppId">
                        </div>
                        <button class="btn btn-primary">Download Logs</button>
                    </form>
                </div>
                <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-striped table-bordered" id="logsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Log Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Logs != null && Model.Logs.Any())
                            {
                                foreach (var row in Model.Logs)
                                {
                                    <tr>
                                        <td>@row.id</td>
                                        <td>@row.date</td>
                                        <td>@row.message</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">No logs available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
