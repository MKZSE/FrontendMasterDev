﻿@using frontendForMasterdev.Models
﻿
@model List<GetLogsModel>

@{
    ViewData["Title"] = "Get Logs";
}

<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Log Table</h5>
            <form class="d-flex w-50" asp-action="GetLogs" method="get">
                <div class="mb-0 me-2">
                    <input type="number" class="form-control" name="appId" placeholder="AppId">
                </div>
                <button class="btn btn-primary">Download Logs</button>
            </form>
        </div>
        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
            <table class="table table-striped table-bordered" id="logsTable">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Log Message</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var row in Model)
                        {
                            <tr>
                                <td>@row.id</td>
                                <td>@row.date</td>
                                <td>@row.message</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    
</div>
<div class="d-flex justify-content-center mb-3">
    <div class="col-md-3">
        <a asp-action="Index" class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-center">
            <i class="fa fa-mail-reply"></i>&nbsp; Back
        </a>
    </div>
</div>